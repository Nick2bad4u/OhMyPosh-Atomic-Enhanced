{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/Nick2bad4u/OhMyPosh-Atomic-Enhanced/refs/heads/main/secrets.schema.json",
    "title": "OhMyPosh Atomic Enhanced Secrets",
    "type": "object",
    "additionalProperties": false,
    "minProperties": 1,
    "definitions": {
        "nonEmptyString": {
            "type": "string",
            "minLength": 1,
            "maxLength": 4096
        },
        "nonEmptyToken": {
            "allOf": [
                {
                    "$ref": "#/definitions/nonEmptyString"
                },
                {
                    "pattern": "^\\S+$"
                }
            ],
            "description": "Non-empty string with no whitespace (good for API keys/tokens)"
        },
        "nonEmptyId": {
            "allOf": [
                {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 256
                },
                {
                    "pattern": "^\\S+$"
                }
            ],
            "description": "Non-empty identifier with no whitespace"
        }
    },
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri-reference",
            "description": "Optional JSON Schema declaration for editors/validators"
        },
        "$id": {
            "type": "string",
            "format": "uri-reference",
            "description": "Optional identifier for this secrets document"
        },
        "$comment": {
            "type": "string",
            "description": "Optional human-readable comment"
        },
        "lastfm": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 2,
            "maxProperties": 3,
            "properties": {
                "api_key": {
                    "$ref": "#/definitions/nonEmptyToken"
                },
                "username": {
                    "$ref": "#/definitions/nonEmptyId"
                },
                "http_timeout": {
                    "type": "integer",
                    "minimum": 250,
                    "maximum": 60000
                }
            },
            "required": [
                "api_key",
                "username"
            ],
            "title": "LastFM configuration"
        },
        "spotify": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 2,
            "maxProperties": 2,
            "properties": {
                "client_id": {
                    "$ref": "#/definitions/nonEmptyToken"
                },
                "client_secret": {
                    "$ref": "#/definitions/nonEmptyToken"
                }
            },
            "required": [
                "client_id",
                "client_secret"
            ],
            "title": "Spotify configuration"
        },
        "owm": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 1,
            "maxProperties": 3,
            "properties": {
                "api_key": {
                    "$ref": "#/definitions/nonEmptyToken"
                },
                "units": {
                    "type": "string",
                    "enum": [
                        "standard",
                        "metric",
                        "imperial"
                    ]
                },
                "http_timeout": {
                    "type": "integer",
                    "minimum": 250,
                    "maximum": 60000
                }
            },
            "required": [
                "api_key"
            ],
            "title": "OpenWeatherMap configuration"
        },
        "brewfather": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 2,
            "maxProperties": 2,
            "properties": {
                "user_id": {
                    "$ref": "#/definitions/nonEmptyId"
                },
                "api_key": {
                    "$ref": "#/definitions/nonEmptyToken"
                }
            },
            "required": [
                "user_id",
                "api_key"
            ],
            "title": "Brewfather configuration"
        },
        "wakatime": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 1,
            "maxProperties": 1,
            "properties": {
                "api_key": {
                    "$ref": "#/definitions/nonEmptyToken"
                }
            },
            "required": [
                "api_key"
            ],
            "title": "WakaTime configuration"
        },
        "strava": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 2,
            "maxProperties": 3,
            "properties": {
                "access_token": {
                    "$ref": "#/definitions/nonEmptyToken"
                },
                "refresh_token": {
                    "$ref": "#/definitions/nonEmptyToken"
                },
                "expires_in": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 2147483647
                }
            },
            "required": [
                "access_token",
                "refresh_token"
            ],
            "title": "Strava configuration"
        },
        "withings": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 2,
            "maxProperties": 3,
            "properties": {
                "access_token": {
                    "$ref": "#/definitions/nonEmptyToken"
                },
                "refresh_token": {
                    "$ref": "#/definitions/nonEmptyToken"
                },
                "expires_in": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 2147483647
                }
            },
            "required": [
                "access_token",
                "refresh_token"
            ],
            "title": "Withings configuration"
        }
    },
    "anyOf": [
        {
            "required": [
                "lastfm"
            ]
        },
        {
            "required": [
                "spotify"
            ]
        },
        {
            "required": [
                "owm"
            ]
        },
        {
            "required": [
                "brewfather"
            ]
        },
        {
            "required": [
                "wakatime"
            ]
        },
        {
            "required": [
                "strava"
            ]
        },
        {
            "required": [
                "withings"
            ]
        }
    ],
    "description": "Local secrets file for OhMyPosh Atomic Enhanced. Keep this file out of version control (secrets.json is gitignored)."
}
