{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://nick2bad4u.github.io/OhMyPosh-Atomic-Enhanced/secrets.schema.json",
    "title": "OhMyPosh Atomic Enhanced Secrets",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "lastfm": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "api_key": {
                    "type": "string",
                    "minLength": 1
                },
                "username": {
                    "type": "string",
                    "minLength": 1
                },
                "http_timeout": {
                    "type": "integer",
                    "minimum": 250,
                    "maximum": 60000
                }
            },
            "required": [
                "api_key",
                "username"
            ],
            "title": "LastFM configuration"
        },
        "spotify": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "client_id": {
                    "type": "string",
                    "minLength": 1
                },
                "client_secret": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "required": [
                "client_id",
                "client_secret"
            ],
            "title": "Spotify configuration"
        },
        "owm": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "api_key": {
                    "type": "string",
                    "minLength": 1
                },
                "units": {
                    "type": "string",
                    "enum": [
                        "standard",
                        "metric",
                        "imperial"
                    ]
                },
                "http_timeout": {
                    "type": "integer",
                    "minimum": 250,
                    "maximum": 60000
                }
            },
            "required": [
                "api_key"
            ],
            "title": "OpenWeatherMap configuration"
        },
        "brewfather": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "user_id": {
                    "type": "string",
                    "minLength": 1
                },
                "api_key": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "required": [
                "user_id",
                "api_key"
            ],
            "title": "Brewfather configuration"
        },
        "wakatime": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "api_key": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "required": [
                "api_key"
            ],
            "title": "WakaTime configuration"
        },
        "strava": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "access_token": {
                    "type": "string",
                    "minLength": 1
                },
                "refresh_token": {
                    "type": "string",
                    "minLength": 1
                },
                "expires_in": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "required": [
                "access_token",
                "refresh_token"
            ],
            "title": "Strava configuration"
        },
        "withings": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "access_token": {
                    "type": "string",
                    "minLength": 1
                },
                "refresh_token": {
                    "type": "string",
                    "minLength": 1
                },
                "expires_in": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "required": [
                "access_token",
                "refresh_token"
            ],
            "title": "Withings configuration"
        }
    },
    "required": [
        "lastfm"
    ],
    "description": "Local secrets file for OhMyPosh Atomic Enhanced. Keep this file out of version control (secrets.json is gitignored)."
}
