{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 3,
    "final_space": true,
    "console_title_template": "{{ .Folder }}{{ if .Root }} [ADMIN]{{ end }}",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ff79c6",
                    "template": "┌─["
                },
                {
                    "type": "os",
                    "style": "plain",
                    "foreground": "#bd93f9",
                    "template": " {{ .Icon }} "
                },
                {
                    "type": "shell",
                    "style": "plain",
                    "foreground": "#8be9fd",
                    "template": "{{ .Name }}"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ff79c6",
                    "template": "]─["
                },
                {
                    "type": "root",
                    "style": "plain",
                    "foreground": "#ffb86c",
                    "template": "⚡ROOT "
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#50fa7b",
                    "properties": {
                        "style": "full",
                        "max_depth": 3,
                        "folder_icon": "",
                        "folder_separator_icon": "/",
                        "home_icon": "~"
                    },
                    "template": " {{ .Path }} "
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ff79c6",
                    "template": "]"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ff79c6",
                    "template": "["
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#f1fa8c",
                    "foreground_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffb86c{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff5555{{ end }}",
                        "{{ if gt .Ahead 0 }}#50fa7b{{ end }}",
                        "{{ if gt .Behind 0 }}#ffb86c{{ end }}"
                    ],
                    "properties": {
                        "fetch_status": true,
                        "branch_icon": "",
                        "branch_identical_icon": "≡",
                        "branch_ahead_icon": "↑",
                        "branch_behind_icon": "↓"
                    },
                    "template": " {{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} ~{{ .Working.String }}{{ end }}{{ if .Staging.Changed }} +{{ .Staging.String }}{{ end }} "
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ff79c6",
                    "template": "]─["
                },
                {
                    "type": "executiontime",
                    "style": "plain",
                    "foreground": "#bd93f9",
                    "properties": {
                        "threshold": 500,
                        "style": "roundrock"
                    },
                    "template": " {{ .FormattedMs }} "
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ff79c6",
                    "template": "]─["
                },
                {
                    "type": "time",
                    "style": "plain",
                    "foreground": "#8be9fd",
                    "properties": {
                        "time_format": "15:04"
                    },
                    "template": " {{ .CurrentDate | date .Format }} "
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ff79c6",
                    "template": "]"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ff79c6",
                    "template": "└─["
                },
                {
                    "type": "battery",
                    "style": "plain",
                    "foreground": "#50fa7b",
                    "foreground_templates": [
                        "{{if eq \"Charging\" .State.String}}#8be9fd{{end}}",
                        "{{if eq \"Discharging\" .State.String}}#ffb86c{{end}}",
                        "{{if eq \"Full\" .State.String}}#50fa7b{{end}}"
                    ],
                    "properties": {
                        "charged_icon": "",
                        "charging_icon": "",
                        "discharging_icon": ""
                    },
                    "template": "{{ if not .Error }}{{ .Icon }}{{ .Percentage }} {{ end }}"
                },
                {
                    "type": "sysinfo",
                    "style": "plain",
                    "foreground": "#f1fa8c",
                    "properties": {
                        "precision": 0
                    },
                    "template": " {{ round .Load1 .Precision }}% {{ round .PhysicalPercentUsed .Precision }}%"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ff79c6",
                    "template": "]─["
                },
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#8be9fd",
                    "template": "{{ if .SSHSession }}SSH {{ end }}{{ .UserName }}@{{ .HostName }}"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ff79c6",
                    "template": "]"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "status",
                    "style": "plain",
                    "foreground": "#50fa7b",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#ff5555{{ end }}"
                    ],
                    "properties": {
                        "always_enabled": true
                    },
                    "template": "{{ if gt .Code 0 }}✗{{ else }}❯{{ end }} "
                }
            ]
        }
    ]
}
